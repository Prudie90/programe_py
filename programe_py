def read_and_modify_file(input_filename, output_filename):
    """Reads a file, modifies its content, and writes it to a new file."""
    try:
        with open(input_filename, "r") as infile:
            content = infile.read()

        modified_content = content.upper()

        with open(output_filename, "w") as outfile:
            outfile.write(modified_content)

        print(f"✅ File processed successfully! Modified version saved as '{output_filename}'")

    except FileNotFoundError:
        print(f"❌ Error: The file '{input_filename}' was not found.")
    except IOError:
        print("❌ Error: Could not read or write file.")


if __name__ == "__main__":
    filename = input("Enter the filename to read: ")
    output_filename = "modified_" + filename
    read_and_modify_file(filename, output_filename)
